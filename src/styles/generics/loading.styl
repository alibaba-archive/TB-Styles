@keyframes bouncedelay
  0%, 80%, 100%
    transform: scale(0)
  40%
    transform: scale(1)

.loading-indicator
  margin: 10px auto
  width: 70px
  text-align: center
  z-index: 9999

  .loader-dot
    display: inline-block
    square(16px)
    background-color: $gray
    border-radius: 100%
    animation: bouncedelay 1.4s infinite ease-in-out
    animation-fill-mode: both

    &:nth-child(1)
      animation-delay: -0.32s

    &:nth-child(2)
      animation-delay: -0.16s

.end-point-wrapper
  text-align: center
  margin-bottom: 15px

  .end-point
    display: inline-block
    width: 10px
    height: 10px
    margin: 1em 3px
    background: $gray
    border-radius: 10px
