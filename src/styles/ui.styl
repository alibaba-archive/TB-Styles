/** * TB-Styles V${version} * An index which makes structure of style files more clearly. * P.S. I appreciate Bootstrap, just don't like it anymore. *      I will replace it with plain style without mixin when I have free time. */// Amount of BS files: 40, Usage: 36 (Hoping to reduce to 0.)$bs = 'bootstrap-styl/bootstrap/'/* ==== Variables ==== */@require '_variables/**'@require $bs + 'variables'/* ==== Mixins & Utilities ==== */@require $bs + 'mixins/**'@require $bs + 'utilities'@require $bs + 'responsive-utilities'@require '_mixins&utils/**'/* ==== Bases ==== */@require $bs + 'normalize' // Reset & Uniformity@require $bs + 'scaffolding'@require $bs + 'grid'@require $bs + 'type'@require 'bases/**'/* ==== Effects (Motions & Magic Transitions...) ==== */@require $bs + 'component-animations'@require 'effects/**'/* ==== Generics (Common Components without JS or UI Base) ==== */@require $bs + 'alerts'@require $bs + 'badges'@require $bs + 'breadcrumbs'@require 'generics/buttons'@require $bs + 'button-groups'@require $bs + 'close'@require $bs + 'code'@require $bs + 'dropdowns'@require $bs + 'forms'@require 'tb-icons/dist/font-icons'@require $bs + 'jumbotron'@require $bs + 'input-groups'@require $bs + 'labels'@require $bs + 'list-group'@require $bs + 'media'@require $bs + 'navs'@require $bs + 'navbar' // Override navs@require $bs + 'pager'@require $bs + 'pagination'@require $bs + 'panels'@require $bs + 'progress-bars'@require $bs + 'responsive-embed'@require $bs + 'tables'@require $bs + 'thumbnails'@require $bs + 'wells'@require 'generics/**'/* ==== UIs (with JS) ==== */@require $bs + 'carousel'@require $bs + 'modals'@require $bs + 'popovers'@require $bs + 'tooltip'@require 'uis/**'/* ==== Themes (is hard and verbose, only override. Default theme is TB-Neutral.) ==== */@require 'themes/**'/* ==== Components (with JS & BLL) ==== */// @require 'components/**'